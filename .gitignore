# Crear archivo .gitignore
cat > .gitignore << 'EOF'
# Entorno virtual
venv/
.env
.venv
env/

# Archivos de entorno
.env.local
.env.production
.env.development
.env.example

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg
MANIFEST

# Database
*.db
*.sqlite3
*.db-journal

# Logs
*.log
logs/

# IDE
.vscode/
.idea/
*.swp
*.swo

# Sistema
.DS_Store
Thumbs.db

# Archivos temporales
*.tmp
*.temp

# Configuración personal
config.local.py
settings.local.py
EOF

echo "✅ .gitignore creado correctamente"